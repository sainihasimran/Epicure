        <item name="android:layout_height">wrap_content</item>
        <item name="contentPaddingLeft">@dimen/size_l</item>
        <item name="contentPaddingRight">@dimen/size_l</item>
        <item name="contentPaddingTop">@dimen/size_l</item>
        <item name="contentPaddingBottom">@dimen/size_l</item>
